<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <!-- 头像-->
                    <RelativeLayout
                        android:id="@+id/rl_choose_headpic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_selector"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="8dp">

                        <TextView
                            style="@style/MyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="头像"
                            android:textColor="#444" />

                        <ImageView
                            android:id="@+id/iv_headimg"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/default_head_male" />

                        <ProgressBar
                            android:id="@+id/pb_uploadhead"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <View style="@style/SplitLine.WithMargin" />

                    <!-- 昵称-->
                    <RelativeLayout
                        android:id="@+id/rl_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_selector"
                        android:padding="15dp">

                        <TextView
                            style="@style/MyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="昵称"
                            android:textColor="#444" />

                        <TextView
                            android:id="@+id/tv_nickname"
                            style="@style/MyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="学递_007"
                            android:textColor="#999" />

                    </RelativeLayout>

                    <View style="@style/SplitLine.WithMargin" />

                    <!-- 学递号-->
                    <RelativeLayout
                        android:id="@+id/rl_userid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_selector"
                        android:padding="15dp">

                        <TextView
                            style="@style/MyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="学递号"
                            android:textColor="#444" />

                        <TextView
                            android:id="@+id/tv_userid"
                            style="@style/MyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="10000000001"
                            android:textColor="#999" />

                    </RelativeLayout>

                    <View style="@style/SplitLine.WithMargin" />

                    <!-- 昵称-->
                    <RelativeLayout
                        android:id="@+id/rl_twodcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_selector"
                        android:padding="15dp">

                        <TextView
                            style="@style/MyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="二维码名片"
                            android:textColor="#444" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/twodcode" />
                    </RelativeLayout>
                </LinearLayout>

                <!-- 头像-->
                <RelativeLayout
                    android:id="@+id/rl_bgimg"
                    style="@style/MenuWrapper"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_selector"
                    android:paddingBottom="0dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="0dp">

                    <TextView
                        style="@style/MyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="背景"
                        android:textColor="#444" />

                    <ImageView
                        android:id="@+id/iv_bgimg"
                        android:layout_width="96dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/head_bg" />

                    <ProgressBar
                        android:id="@+id/pb_uploadbg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="33dp"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <!-- 昵称-->
                    <RelativeLayout
                        android:id="@+id/rl_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_selector"
                        android:padding="15dp">

                        <TextView
                            style="@style/MyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="性别"
                            android:textColor="#444" />

                        <TextView
                            android:id="@+id/tv_sex"
                            style="@style/MyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="男"
                            android:textColor="#999" />

                    </RelativeLayout>

                    <View style="@style/SplitLine.WithMargin" />

                    <!-- 昵称-->
                    <RelativeLayout
                        android:id="@+id/rl_autograph"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_selector"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/tv_graph"
                            style="@style/MyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="我的签名"
                            android:textColor="#444" />

                        <TextView
                            android:id="@+id/tv_signature"
                            style="@style/MyText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="30dp"
                            android:ellipsize="end"
                            android:gravity="center|right"
                            android:hint="暂时没有个性签名！"
                            android:singleLine="true"
                            android:textColor="#999"
                            android:textColorHint="#999" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />

            </LinearLayout>

        </ScrollView>


    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>
