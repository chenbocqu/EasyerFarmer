<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:default_image="@drawable/img_holder"
                    app:delay_time="2000"
                    app:image_scale_type="fit_xy"
                    app:indicator_drawable_selected="@drawable/selected_radius"
                    app:indicator_drawable_unselected="@drawable/unselected_radius"
                    app:indicator_height="10dp"
                    app:indicator_margin="5dp"
                    app:indicator_width="10dp"
                    app:title_background="@color/black_trans"
                    app:title_height="30dp"
                    app:title_textcolor="@color/white"
                    app:title_textsize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/menuMargin"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_express_take"
                        style="@style/BtnItem">

                        <ImageView
                            style="@style/Icon_btnItem"
                            android:src="@drawable/fruit" />

                        <TextView
                            style="@style/MyText"
                            android:layout_marginTop="10dp"
                            android:text="果蔬上架" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_send"
                        style="@style/BtnItem">

                        <ImageView
                            style="@style/Icon_btnItem"
                            android:src="@drawable/express" />

                        <TextView
                            style="@style/MyText"
                            android:layout_marginTop="10dp"
                            android:text="发布货运" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_return"
                        style="@style/BtnItem">

                        <ImageView
                            style="@style/Icon_btnItem"
                            android:src="@drawable/iwant" />

                        <TextView
                            style="@style/MyText"
                            android:layout_marginTop="10dp"
                            android:text="我要买" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_order"
                        style="@style/BtnItem">

                        <ImageView
                            style="@style/Icon_btnItem"
                            android:src="@drawable/express_query" />

                        <TextView
                            style="@style/MyText"
                            android:layout_marginTop="10dp"
                            android:text="我的交易" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mytrans"
                        style="@style/BtnItem">

                        <ImageView
                            style="@style/Icon_btnItem"
                            android:src="@drawable/transport" />

                        <TextView
                            style="@style/MyText"
                            android:layout_marginTop="10dp"
                            android:text="我的货运" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_other_task"
                        style="@style/BtnItem">

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fg_notice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/menuMargin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <View
                        style="@style/SplitLine.WithMargin"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@color/light_green_trans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我是有底线的" />

                    <View
                        style="@style/SplitLine.WithMargin"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@color/light_green_trans" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
