<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!-- 顶部titleBar-->

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            style="@style/Menu_Icon"
            android:src="@drawable/username" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="请输入注册手机号"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <LinearLayout style="@style/Icon">

            <ImageView
                android:id="@+id/iv_del_username"
                style="@style/Icon"
                android:padding="10dp"
                android:src="@drawable/delete"
                android:tint="@color/text_color"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="2dp"
        android:gravity="center">

        <ImageView
            style="@style/Menu_Icon"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="请输入账户密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <LinearLayout style="@style/Icon">

            <ImageView
                android:id="@+id/iv_del_password"
                style="@style/Icon"
                android:padding="10dp"
                android:src="@drawable/delete"
                android:tint="@color/text_gray"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="2dp"
        android:gravity="center">

        <ImageView
            style="@style/Menu_Icon"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/edt_conpwd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="请输入确认密码"
            android:inputType="textWebPassword"
            android:singleLine="true"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />

        <LinearLayout style="@style/Icon">

            <ImageView
                android:id="@+id/iv_del_conpwd"
                style="@style/Icon"
                android:padding="10dp"
                android:src="@drawable/delete"
                android:tint="@color/text_gray"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundbtn_bg"
        android:text="立即注册"
        android:textColor="@color/white"
        android:textSize="14sp" />
    
</LinearLayout>
