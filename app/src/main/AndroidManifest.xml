            android:name=".ui.userinfo.NickNameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.userinfo.IntegralActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.userinfo.RechargeActivity"
